{
  "name": "sitecheck",
  "version": "1.0.0",
  "private": true,
  "description": "A collection of web tasks",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'stack/**/*.ts'",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "tsc && npm run build:extension",
    "build:extension": "mkdir -p dist/extension/client && cp stack/extension/client/manifest.json dist/extension/client/ && npm run build:extension-bg",
    "build:extension-bg": "esbuild stack/extension/client/background.ts --bundle --outfile=dist/extension/client/background.js --format=iife --target=chrome100",
    "check": "./stack/infra/check.sh",
    "dev": "npm run build && node dist/behaviour/run-task.js",
    "docker:build": "docker compose -f stack/infra/docker-compose.yml --env-file .env build",
    "docker:down": "docker compose -f stack/infra/docker-compose.yml down"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.2.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-sonarjs": "^3.0.6",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
