{
  "manifest_version": 3,
  "name": "SiteCheck Remote",
  "version": "1.0.0",
  "description": "Remote control for SiteCheck automation",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "debugger",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js"],
      "run_at": "document_idle"
    }
  ]
}
