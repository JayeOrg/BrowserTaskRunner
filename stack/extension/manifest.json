{
  "manifest_version": 3,
  "name": "SiteCheck Remote",
  "version": "1.0.0",
  "description": "Remote control for SiteCheck automation",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "main.js"
  }
}
