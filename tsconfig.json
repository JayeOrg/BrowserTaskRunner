{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "stack",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["stack/src/**/*", "stack/extension/index.ts"],
  "exclude": ["node_modules", "dist", "stack/extension/extension", "stack/docker"]
}
