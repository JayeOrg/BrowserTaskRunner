{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "stack",
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"]
  },
  "include": ["stack/behaviour/**/*", "stack/extension/index.ts", "stack/extension/host.ts"],
  "exclude": ["node_modules", "dist", "stack/infra", "stack/extension/extension"]
}
